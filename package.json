{
  "name": "aurum-leasing",
  "version": "1.0.0",
  "type": "module",
  "scripts": {
    "start": "node server.js",
    "build:server": "tsc",
    "build:client": "esbuild index.tsx --bundle --outfile=dist/index.js --format=esm --minify --external:react --external:react-dom",
    "build": "mkdir -p dist && npm run build:client && npm run build:server && cp index.html manifest.json sw.js dist/ && sed -i 's/index.tsx/index.js/g' dist/index.html",
    "migrate": "node-pg-migrate",
    "test": "vitest run",
    "test:watch": "vitest",
    "lint": "eslint .",
    "format": "prettier --write ."
  },
  "dependencies": {
    "@google/genai": "^1.34.0",
    "bcrypt": "^6.0.0",
    "compression": "^1.7.4",
    "cookie-parser": "^1.4.7",
    "cors": "^2.8.5",
    "express": "^4.18.2",
    "express-rate-limit": "^8.2.1",
    "helmet": "^7.1.0",
    "ioredis": "^5.3.2",
    "jsonwebtoken": "^9.0.3",
    "lucide-react": "^0.475.0",
    "multer": "^2.0.2",
    "node-pg-migrate": "^7.3.0",
    "nodemailer": "^7.0.13",
    "pdfkit": "^0.17.2",
    "pg": "^8.11.3",
    "react": "19.0.0",
    "react-dom": "19.0.0",
    "recharts": "^2.15.0",
    "zod": "^4.3.6"
  },
  "devDependencies": {
    "@types/bcrypt": "^6.0.0",
    "@types/compression": "^1.7.5",
    "@types/cookie-parser": "^1.4.10",
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/express-rate-limit": "^5.1.3",
    "@types/jsonwebtoken": "^9.0.10",
    "@types/multer": "^2.0.0",
    "@types/node": "^20.10.6",
    "@types/nodemailer": "^7.0.9",
    "@types/pdfkit": "^0.17.4",
    "@types/pg": "^8.10.9",
    "@types/react": "^19.0.0",
    "@types/react-dom": "^19.0.0",
    "@types/supertest": "^6.0.3",
    "@typescript-eslint/eslint-plugin": "^8.54.0",
    "@typescript-eslint/parser": "^8.54.0",
    "esbuild": "^0.19.11",
    "eslint": "^9.39.2",
    "eslint-config-prettier": "^10.1.8",
    "globals": "^17.2.0",
    "prettier": "^3.8.1",
    "supertest": "^7.2.2",
    "typescript": "^5.3.3",
    "typescript-eslint": "^8.54.0",
    "vitest": "^4.0.18"
  }
}
