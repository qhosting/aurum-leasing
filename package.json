{
  "name": "aurum-leasing",
  "version": "1.0.0",
  "type": "module",
  "scripts": {
    "start": "node server.js",
    "build:server": "tsc",
    "build:client": "esbuild index.tsx --bundle --outfile=dist/index.js --format=esm --minify --external:react --external:react-dom",
    "build": "mkdir -p dist && npm run build:client && npm run build:server && cp index.html manifest.json sw.js dist/ && sed -i 's/index.tsx/index.js/g' dist/index.html"
  },
  "dependencies": {
    "express": "^4.18.2",
    "pg": "^8.11.3",
    "ioredis": "^5.3.2",
    "cors": "^2.8.5",
    "helmet": "^7.1.0",
    "compression": "^1.7.4",
    "lucide-react": "^0.475.0",
    "recharts": "^2.15.0",
    "@google/genai": "^1.34.0"
  },
  "devDependencies": {
    "typescript": "^5.3.3",
    "esbuild": "^0.19.11",
    "@types/express": "^4.17.21",
    "@types/pg": "^8.10.9",
    "@types/cors": "^2.8.17",
    "@types/compression": "^1.7.5",
    "@types/node": "^20.10.6",
    "@types/react": "^19.0.0",
    "@types/react-dom": "^19.0.0",
    "react": "^19.0.0",
    "react-dom": "^19.0.0"
  }
}