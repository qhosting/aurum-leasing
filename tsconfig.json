
{
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "outDir": ".",
    "rootDir": ".",
    "allowJs": true,
    "types": ["node"]
  },
  "include": ["server.ts"],
  "exclude": ["node_modules", "dist"]
}
